FROM debian:bookworm
RUN mkdir /swfs && \
    mkdir /volume_data
WORKDIR /swfs

RUN apt-get update && \
    apt-get install -y --no-install-recommends wget && \
    wget --no-check-certificate https://github.com/seaweedfs/seaweedfs/releases/download/4.13/linux_amd64.tar.gz && \
    tar -xf ./linux_amd64.tar.gz && \
    rm -rf ./linux_amd64.tar.gz && \
    mv ./weed ./seaweed
